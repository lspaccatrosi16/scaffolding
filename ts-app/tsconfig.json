{
    "compilerOptions": {
      "outDir": "build",
      "baseUrl": "./src",
      "typeRoots": ["src/types", "node_modules/@types"],
      "sourceMap": false,
      "allowSyntheticDefaultImports": true,
      "lib": ["ES2021", "DOM"],
      "module": "ES2022",
      "moduleResolution": "node",
      "target": "ES2021",
      "declaration": true,
      "strictFunctionTypes": true,
      "noImplicitAny": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "allowJs": true,
      "checkJs": true,
    },
    "include": ["src"],
  }